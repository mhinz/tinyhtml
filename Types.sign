SIGNATURE Types

IMPORT Seq       ONLY seq
       String    ONLY string
       Real      ONLY real
       WinConfig ONLY point

TYPE posWord == posWord(text     : string,
                        position : point,
                        width    : real)

TYPE line == <>
              line(data: seq[posWord])

FUN <<      : line ** posWord -> line
FUN ++      : line ** line   -> line

FUN flatten : seq[line] -> line
